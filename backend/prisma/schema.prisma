generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  company   String?
  address   Address?
}

model Address {
  id        String    @id @default(cuid())
  city      String
  zipcode   String
  lat       Float
  lng       Float
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
}


