// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(cuid())
  name    String
  email   String   @unique
  phone   String?
  company String?

  // Relation to Address (no onDelete here)
  address Address?
}

model Address {
  id      String @id @default(cuid())
  street  String
  city    String
  zipcode String
  lat     Float
  lng     Float

  // The foreign key for the one-to-one relation
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}